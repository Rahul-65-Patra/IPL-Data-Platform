generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Team {
  id   Int    @id @default(autoincrement())
  name String @unique
}

model Player {
  id   Int    @id @default(autoincrement())
  name String
  team String
}

model Match {
  id     Int    @id @default(autoincrement())
  team1  String
  team2  String
  venue  String?
  winner String?
  date   String?
}

model PlayerCareer {
  id      Int    @id @default(autoincrement())
  player  String
  matches Int?
  runs    Int?
  wickets Int?
}

model BattingStat {
  id     Int    @id @default(autoincrement())
  player String
  runs   Int?
  balls  Int?
  sr     Float?
}

model BowlingStat {
  id       Int    @id @default(autoincrement())
  player   String
  wickets  Int?
  economy  Float?
}

model Standing {
  id     Int    @id @default(autoincrement())
  team   String
  points Int?
}

model Scorecard {
  id             Int    @id @default(autoincrement())
  matchId        Int
  innings        Int
  battingTeamId  Int
  runs           Int
  wickets        Int
  overs          Int
  team           String   
}
